[Unit]
Description=Nebula service for @@tun_device@@ network device
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=nebula
ExecStart=/usr/lib/nebula/@@tun_device@@/nebula -config /etc/nebula/@@tun_device@@/config.yaml

[Install]
WantedBy=multi-user.target
